      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{userEmail}}\",\n  \"password\": \"{{userPassword}}\",\n  \"name\": \"{{userName}}\",\n  \"phoneNumber\": \"{{userPhone}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const j = pm.response.json();",
                  "pm.test('Status 201', function () { pm.response.to.have.status(201); });",
                  "pm.test('Success true', function () { pm.expect(j).to.have.property('success', true); });",
                  "pm.test('Has tokens', function () { pm.expect(j).to.have.property('accessToken'); pm.expect(j).to.have.property('refreshToken'); });",
                  "pm.environment.set('apostolicAccessToken', j.accessToken);",
                  "pm.environment.set('apostolicRefreshToken', j.refreshToken);",
                  "pm.environment.set('userId', j.user && j.user.id);",
                  "pm.test('Response time < 2000ms', function () { pm.expect(pm.response.responseTime).to.be.below(2000); });"
                ]
              }
            }
          ]
