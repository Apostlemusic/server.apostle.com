    "description": "Postman collection for User authentication and user endpoints (merged controllers)."
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Collection-level pre-request script for user APIs",
          "pm.request.headers.upsert({ key: 'Content-Type', value: 'application/json' });",
          "",
          "// Ensure baseUrl is set",
          "var baseUrl = pm.collectionVariables.get('baseUrl') || pm.environment.get('baseUrl');",
          "if (!baseUrl) { pm.collectionVariables.set('baseUrl', 'http://localhost:10000'); }",
          "",
          "// Default user variables",
          "if (!pm.collectionVariables.get('userEmail')) pm.collectionVariables.set('userEmail', 'user_' + Date.now() + '@example.com');",
          "if (!pm.collectionVariables.get('userPassword')) pm.collectionVariables.set('userPassword', 'UserPass123!');",
          "if (!pm.collectionVariables.get('userName')) pm.collectionVariables.set('userName', 'Test User');",
          "pm.collectionVariables.set('userPhone', pm.collectionVariables.get('userPhone') || '+10000000001');",
          "pm.collectionVariables.set('userOtp', pm.collectionVariables.get('userOtp') || '123456');",
          "pm.collectionVariables.set('userNewPassword', pm.collectionVariables.get('userNewPassword') || 'UserPass456!');",
          "",
          "// Attach Cookie header with tokens if present",
          "var access = pm.environment.get('apostolicAccessToken');",
          "var refresh = pm.environment.get('apostolicRefreshToken');",
          "if (access || refresh) {",
          "  var cookieVal = [",
          "    access ? 'apostolicaccesstoken=' + access : null,",
          "    refresh ? 'apostolictoken=' + refresh : null",
          "  ].filter(Boolean).join('; ');",
          "  pm.request.headers.upsert({ key: 'Cookie', value: cookieVal });",
          "}"
        ]
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:10000" },
    { "key": "userEmail", "value": "user@example.com" },
    { "key": "userPassword", "value": "UserPass123!" },
    { "key": "userName", "value": "Test User" },
    { "key": "userPhone", "value": "+10000000001" },
    { "key": "userOtp", "value": "123456" },
    { "key": "userNewPassword", "value": "UserPass456!" }
