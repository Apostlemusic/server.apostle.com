    {
      "name": "Dashboard",
      "item": [
        {
          "name": "Get Server Stats",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/stats",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "stats"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const j = pm.response.json();",
                  "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });",
                  "pm.test('Success is true', function () { pm.expect(j).to.have.property('success', true); });",
                  "pm.test('Has stats and totals', function () { pm.expect(j).to.have.property('stats'); pm.expect(j.stats).to.have.property('totals'); });",
                  "pm.test('Totals fields are numbers', function () {",
                  "  const t = j.stats.totals;",
                  "  ['users','artists','songs','albums','playlists','categories','genres','hiddenSongs','hiddenAlbums','songLikes','albumLikes','recentPlays'].forEach(function (k) {",
                  "    pm.expect(t[k]).to.be.a('number');",
                  "  });",
                  "});",
                  "pm.test('Top arrays have correct shape', function () {",
                  "  ['topCategories','topGenres'].forEach(function (key) {",
                  "    pm.expect(j.stats[key]).to.be.an('array');",
                  "    if (j.stats[key].length > 0) {",
                  "      const item = j.stats[key][0];",
                  "      pm.expect(item).to.have.property('slug');",
                  "      pm.expect(item.slug).to.be.a('string');",
                  "      pm.expect(item).to.have.property('count');",
                  "      pm.expect(item.count).to.be.a('number');",
                  "    }",
                  "  });",
                  "});",
                  "pm.test('Response time < 2000ms', function () { pm.expect(pm.response.responseTime).to.be.below(2000); });"
                ]
              }
            }
