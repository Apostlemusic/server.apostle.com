  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Collection-level pre-request script to attach admin cookies and defaults",
          "// Note: Do not use pm.response here.",
          "pm.request.headers.upsert({ key: 'Content-Type', value: 'application/json' });",
          "",
          "// Ensure baseUrl is set",
          "var baseUrl = pm.collectionVariables.get('baseUrl') || pm.environment.get('baseUrl');",
          "if (!baseUrl) { pm.collectionVariables.set('baseUrl', 'http://localhost:10000'); }",
          "",
          "// Default admin variables if missing",
          "if (!pm.collectionVariables.get('adminEmail')) pm.collectionVariables.set('adminEmail', 'admin_' + Date.now() + '@example.com');",
          "if (!pm.collectionVariables.get('adminPassword')) pm.collectionVariables.set('adminPassword', 'AdminPass123!');",
          "if (!pm.collectionVariables.get('adminName')) pm.collectionVariables.set('adminName', 'Admin User');",
          "pm.collectionVariables.set('adminPhone', pm.collectionVariables.get('adminPhone') || '+10000000000');",
          "",
          "// Attach Cookie header with admin tokens if available (secure cookies won't persist on HTTP)",
          "var access = pm.environment.get('apostolicAdminAccessToken');",
          "var refresh = pm.environment.get('apostolicAdminRefreshToken');",
          "if (access || refresh) {",
          "  var cookieVal = [",
          "    access ? 'apostolicadminaccesstoken=' + access : null,",
          "    refresh ? 'apostolicadmintoken=' + refresh : null",
          "  ].filter(Boolean).join('; ');",
          "  pm.request.headers.upsert({ key: 'Cookie', value: cookieVal });",
          "}"
        ]
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:10000" },
    { "key": "adminEmail", "value": "admin@example.com" },
    { "key": "adminPassword", "value": "AdminPass123!" },
    { "key": "adminName", "value": "Admin User" },
    { "key": "adminPhone", "value": "+10000000000" },
    { "key": "adminOtp", "value": "123456" },
    { "key": "adminNewPassword", "value": "AdminPass456!" }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register Admin",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{adminEmail}}\",\n  \"password\": \"{{adminPassword}}\",\n  \"name\": \"{{adminName}}\",\n  \"phoneNumber\": \"{{adminPhone}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const json = pm.response.json();",
                  "pm.test('Status code is 201', function () { pm.response.to.have.status(201); });",
                  "pm.test('Success is true', function () { pm.expect(json).to.have.property('success', true); });",
                  "pm.test('Contains admin object', function () { pm.expect(json).to.have.property('admin'); pm.expect(json.admin).to.have.property('id'); });",
                  "pm.test('Contains tokens', function () { pm.expect(json).to.have.property('accessToken'); pm.expect(json).to.have.property('refreshToken'); });",
                  "// Save tokens and admin id to environment",
                  "pm.environment.set('apostolicAdminAccessToken', json.accessToken);",
                  "pm.environment.set('apostolicAdminRefreshToken', json.refreshToken);",
                  "pm.environment.set('adminId', json.admin && json.admin.id);",
                  "pm.test('Response time < 2000ms', function () { pm.expect(pm.response.responseTime).to.be.below(2000); });"
                ]
              }
            }
          ]
        },
